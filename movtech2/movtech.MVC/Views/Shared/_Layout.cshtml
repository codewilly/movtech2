<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MOVTech - @ViewData["Title"]</title>

    <script src="~/js/Fontawesome.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap-4.1.3/css/bootstrap.css" />
    <link href="~/lib/fontawesome-free-5.11.1/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>

<body>


    <div class="container-fluid" id="teste">
        <div class="row h-100">
            <div class="col-lg-2 p-0" style="background-color: white;">
                <div class="sticky-top p-0">
                    <partial name="_Sidebar" />
                </div>
            </div>
            <div class="col-lg-10 p-0">
                <partial name="_Navbar" />
                <div class="container p-md-4 " style="color: #25374d !important">
                    @RenderBody()
                </div>
                <div class="footer-copyright text-center py-3">
                    © 2019 Copyright - MOVTech
                </div>
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    
    <script src="~/lib/bootstrap-4.1.3/js/bootstrap.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/js/sweetalert2.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <!-- Realce no navbar -->
    <script>
        $("#@this.ViewContext.RouteData.Values["controller"].ToString()").addClass("active");
        $("#@this.ViewContext.RouteData.Values["controller"].ToString()2").addClass("active");
    </script>


</body>
</html>
