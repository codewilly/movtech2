@model IEnumerable<movtech.Domain.Entities.TrafficTicket>


<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item  text-white"><span class="fas fa-balance-scale"></span> Multas</li>
        </ul>
    </nav>
</div>


<div class="row">
    <div class="col-12 p-1">
        <div class="card ">
            <div class="card-header">
                <h2>Multas</h2>
                <p class="card-subtitle">Visualize, pague e informe novas multas.</p>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <a href='@Url.Action("Create", "TrafficTickets")' class="btn breadcrumb-bgcolor btn-sm float-right text-white"><span class="fas fa-plus"></span> Registrar Multa</a>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">

                        <table class="table table-striped table-sm text-center">

                            <thead>
                                <tr>
                                    <th>Infrator</th>
                                    <th>Veículo</th>
                                    <th>Custo</th>
                                    <th>Status</th>
                                    <th>Vencimento</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model == null)
                                {
                                    <tr><td colspan="6" class="text-danger">Nenhuma Multa</td></tr>
                                }
                                else
                                {
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><a href="@Url.Action("Details", "Drivers", new { id = item.Driver.Id })">@item.Driver.Name</a></td>
                                                <td><a href="@Url.Action("Details", "Vehicles", new { id = item.Vehicle.Id })">@item.Vehicle.Brand</a></td>
                                                <td><span class="fas fa-coins btn-link">  </span>  @item.Cost</td>
                                                <td>

                                                    @if (item.WasPaid)
                                                    {
                                                        <span class="fas fa-dollar-sign text-success"></span> 
                                                    }
                                                    else
                                                    {
                                                        <span class='@(item.BilletExpiration >= DateTime.Now ? "fas fa-dollar-sign text-warning":" fas fa-dollar-sign text-danger")'></span>

                                                    }

                                                </td>
                                                <td>
                                                    @item.BilletExpiration.ToString("dd/MM/yyyy")
                                                </td>  
                                                <td>

                                                    <a asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Detalhes" class="btn-link"><span class="fas fa-search"></span></a>

                                                </td>

                                            </tr>
                                        }
                                    }
                                }


                            </tbody>


                        </table>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>