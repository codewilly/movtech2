@model movtech.Domain.Contracts.User.UserLoginRequest;

@{
    Layout = "";
}

<style>
    html, body {
        height: 100%;
    }
</style>

<style>
    body {
        background-image: url("/images/movtechlogo.png");
        background-repeat: no-repeat;
        background-position-x: right;
        background-position-y: bottom;
        background-attachment: fixed;
    }

    .footer-copyright {
        position: absolute;
        left: 40%;
        text-align: center;
        bottom: 0;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MOVTech - @ViewData["Title"]</title>

    <script src="~/js/Fontawesome.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap-4.1.3/css/bootstrap.css" />
    <link href="~/lib/fontawesome-free-5.11.1/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>

<body>

    <div class="loading" id="loading">
        <i class="fas fa-car loading-icon loading-icon-inside"></i>
        <i class="fas fa-circle-notch fa-spin loading-icon"></i>
    </div>


    <div class="container">
        <div class="row h-100">
            <div class="col-md-12 my-auto">
                <div class="row">
                    <div class="col-md-4 offset-md-4">

                        <div class="card">

                            <div class="card-body">
                                <h4 class="text-center">Bem-Vindo!</h4>
                                <p class="text-center">Por favor, identifique-se</p>

                                <form asp-action="Login">

                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><span class="fas fa-user"></span></span>
                                        </div>
                                        <input asp-for="CPF" class="form-control cpf" placeholder="Login">
                                    </div>

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><span class="fas fa-key"></span></span>
                                        </div>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Senha">
                                    </div>

                                    <button type="submit" class="btn breadcrumb-bgcolor text-white float-right">Entrar</button>

                                </form>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="~/lib/bootstrap-4.1.3/js/bootstrap.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/js/sweetalert2.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>


