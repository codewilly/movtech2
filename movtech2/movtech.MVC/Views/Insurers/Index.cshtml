@model IEnumerable<movtech.Domain.Entities.Insurer>
@{
    ViewData["Title"] = "Index";
}




<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item  text-white"><a href='@Url.Action("Index", "Insurences")'><span class="fas fa-file-contract"></span> Seguros</a></li>
            <li class="breadcrumb-item  text-white"><span class="fas fa-store-alt"></span> Seguradoras</li>
        </ul>
    </nav>
</div>


<div class="row ">
    <div class="col-12 p-1 ">
        <div class="card  ">
            <div class="card-header">
                <h2>Seguradoras</h2>
                <p class="card-subtitle">Gerencie as Seguradoras de Seguro </p>
            </div>

            <div class="card-body">

                <div class="row text-center">
                    <div class="col-12">
                        <a href='@Url.Action("Create", "Insurers")' class="btn breadcrumb-bgcolor btn-sm  text-white float-right"><span class="fas fa-plus"></span> Cadastrar Seguradoras</a>
                    </div>



                </div>

                <br />

                <div class="row">
                    <div class="col-12">


                        <table class="table table-striped table-sm text-center">


                            <thead>
                                <tr>
                                    <th>Seguradora</th>
                                    <th>CNPJ</th>
                                    <th>Telefone</th>
                                    <th>Email</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.CNPJ</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>


                                            <td><a asp-action="Details" asp-route-id="@item.Id"  data-toggle="tooltip" data-placement="bottom" title="Detalhes" class="btn-link"><span class="fas fa-search"></span></a> <a asp-action="Edit" asp-route-id="@item.Id" class="btn-link"><span class="fas fa-pencil-alt"></span></a></td>

                                        </tr>
                                    }
                                }
                                else
                                {

                                    <tr><td colspan="5">Nenhuma Seguradora cadastrada ainda!</td></tr>
                                }


                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
