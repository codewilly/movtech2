@model IEnumerable<movtech.Domain.Entities.Vehicle>

<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item  text-white"><span class="fas fa-car-side"></span> Veículos</li>
        </ul>
    </nav>
</div>

<div class="row">
    <div class="col-12 p-1">
        <div class="card ">
            <div class="card-header">
                <h2>Veículos</h2>
                <p class="card-subtitle">Gerencie os veículos de sua frota!</p>
            </div>

            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <a href='@Url.Action("Create", "Vehicles")' class="btn breadcrumb-bgcolor btn-sm float-right text-white"><span class="fas fa-plus"></span> Cadastrar novo veículo</a>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        @*<partial name="_VehiclesTable" />*@

                        <table class="table table-striped table-sm text-center">




                            <thead>
                                <tr>
                                    <th>Placa</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Motorista</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.LicensePlate</td>
                                            <td>@item.Brand</td>
                                            <td>@item.Model</td>
                                            <td>-</td>
                                            <td><a href="#" data-toggle="tooltip" data-placement="bottom" title="Detalhes" class="btn-link"><span class="fas fa-search"></span></a> <a asp-action="Edit" asp-route-id="@item.Id" class="btn-link"><span class="fas fa-pencil-alt"></span></a></td>
                                        </tr>
                                    }
                                }
                                else
                                {                                  
                                    <tr>
                                        <td colspan="5">Nenhum veículo cadastrado ainda!</td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

