@model IEnumerable<movtech.Domain.Entities.Vehicle>

@section Scripts{

    @if (ViewBag.ManutencaoSucesso == "true")
    {
        <script>
            Swal.fire({
                title: "Pronto!",
                html: "Manutenção registrada com sucesso!",
                icon: 'success',
                confirmButtonText: 'Fechar'
            })
        </script>
    }


}

<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item text-white"><span class="fas fa-hammer"></span> Manutenções</li>
        </ul>
    </nav>
</div>

<div class="row">
    <div class="col-12 p-1">
        <div class="card ">
            <div class="card-header">
                <h2>Manutenções</h2>
                <p class="card-subtitle">Informe as manutenções realizadas em sua frota</p>
            </div>

            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <h5>Veículos que precisam de manutenção:</h5><br />
                        <table class="table table-striped table-sm text-center">

                            <thead>
                                <tr>
                                    <th>Placa</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Necessita de</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>

                                                <a href="@Url.Action("Details", "Vehicles", new { id = item.Id })">@item.LicensePlate</a>

                                            </td>
                                            <td>@item.Brand</td>
                                            <td>@item.Model</td>
                                            <td>

                                                @if (item.NeedsMaintenance)
                                                {
                                                    <span class="fas fa-hammer"></span>
                                                }

                                                @if (item.NeedsChangeOil)
                                                {
                                                    <span class="fas fa-oil-can"></span>
                                                }

                                                @if (item.NeedsChangeTires)
                                                {
                                                    <span class="fas fa-dot-circle"></span>
                                                }

                                            </td>
                                            <td><a asp-action="Create" asp-route-id="@item.Id" class="btn-link"><span class="fas fa-wrench"></span></a></td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5">Parabéns! Sua frota está em ordem!</td>
                                    </tr>
                                }





                                @*<tr>
                                        <td>JIM-2510</td>
                                        <td>Dafra</td>
                                        <td>Kansas 150</td>
                                        <td><span class="fas fa-hammer"></span>  </td>

                                    </tr>*@


                            </tbody>

                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>