@model IEnumerable<movtech.Domain.Entities.InsurenceClaim>
@{
    ViewData["Title"] = "Index";
}

<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item  text-white"><span class="fas fa-car-side"></span> Sinistros</li>
        </ul>
    </nav>
</div>


<div class="row">
    <div class="col-12 p-1">
        <div class="card ">
            <div class="card-header">
                <h2>Sinistros</h2>
                <p class="card-subtitle">Gerencie os Sinistros ocorridos</p>
            </div>

            <div class="card-body">

                <div class="row text-center">
                    
                    <div class="col-12">
                        <a href='@Url.Action("Create", "InsurenceClaims")' class="btn breadcrumb-bgcolor btn-sm  text-white float-right"><span class="fas fa-plus"></span> Registrar Sinistro</a>
                    </div>


                </div>

                <br />

                <div class="row">
                    <div class="col-12">


                        <table class="table table-striped table-sm text-center">




                            <thead>
                                <tr>
                                    <th>Carro</th>
                                    <th>Motorista</th>

                                    <th>Data do Sinistro</th>
                                    <th>Seguro - Apólice</th>
                                    <th>Tipo</th>
                                    
                                    <th>Ação</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Details", "Vehicles", new { id =  item.Insurence.VehicleId})"> @item.Insurence.Vehicle.Brand - @item.Insurence.Vehicle.LicensePlate </a></td>
                                            <td><a href="@Url.Action("Details", "Drivers", new { id =  item.DriverId})"> @item.Driver.Name </a></td>
                                            <td>@item.InsurenceClaimDate</td>
                                            <td><a href="@Url.Action("Details", "Insurences", new { id =  item.InsurenceId})"> @item.Insurence.PolicyNumber </a></td>
                                            <td>@item.InsurenceClaimType</td>

                                            <td><a asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Detalhes" class="btn-link"><span class="fas fa-search"></span></a> </td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5">Nenhum Sinistro cadastrado ainda!</td></tr>

                                }


                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

