@model IEnumerable<movtech.Domain.Entities.Insurence>
@{
    ViewData["Title"] = "Index";
}

<div class="row ">
    <nav aria-label="breadcrumb" class="w-100">
        <ul class="breadcrumb breadcrumb-bgcolor">
            <li class="breadcrumb-item  text-white"><span class="fas fa-car-side"></span> Seguros</li>
        </ul>
    </nav>
</div>


<div class="row">
    <div class="col-12 p-1">
        <div class="card ">
            <div class="card-header">
                <h2>Seguros</h2>
                <p class="card-subtitle">Gerencie o seguro dos veículos da sua frota!</p>
            </div>

            <div class="card-body">

                <div class="row text-center">
                    <div class="col-4">
                        <a href='@Url.Action("Index", "Insurers")' class="btn breadcrumb-bgcolor btn-sm  text-white"><span class="fas fa-plus"></span> Seguradoras</a>
                    </div>
                    <div class="col-4">
                        <a href='@Url.Action("Index", "Brokers")' class="btn breadcrumb-bgcolor btn-sm text-center text-white"><span class="fas fa-plus"></span> Corretoras</a>
                    </div>
                    <div class="col-4">
                        <a href='@Url.Action("Create", "Insurences")' class="btn breadcrumb-bgcolor btn-sm  text-white"><span class="fas fa-plus"></span> Cadastrar Seguro</a>
                    </div>


                </div>

                <br />

                <div class="row">
                    <div class="col-12">


                        <table class="table table-striped table-sm text-center">




                            <thead>
                                <tr>
                                    <th>Carro</th>

                                    <th>Início da Vigência</th>
                                    <th>Término da Vigência</th>
                                    <th>Apólice</th>
                                    <th>Seguradora</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Details", "Vehicles", new { id =  item.VehicleId})"> @item.Vehicle.Brand - @item.Vehicle.LicensePlate </a></td>
                                            <td>@item.BeginOfVigency</td>
                                            <td>@item.EndOfVigency</td>
                                            <td>@item.PolicyNumber</td>
                                            <td><a href="@Url.Action("Details", "Insurers", new { id =  item.InsurerId})"> @item.Insurer.Name</td>

                                            <td><a asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Detalhes" class="btn-link"><span class="fas fa-search"></span></a> </td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5">Nenhum Seguro cadastrado ainda!</td></tr>

                                }


                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

